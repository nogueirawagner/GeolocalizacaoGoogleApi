@model GestaoDDD.Application.ViewModels.CandidatoViewModel
@{
    Layout = "~/Views/Shared/_CFP.cshtml";
}
<link href="~/Content/Prestador/prestador.css" rel="stylesheet" />
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyC77KEJkbjHojYpYqn3NZB1PkpAqC8nJCU&amp;sensor=true"></script>
<script src="~/Scripts/Adicionais/mapa_candidato.js"></script>
<script src="~/Scripts/jquery-ui.custom.min.js"></script>
<script src="~/Scripts/jquery-2.2.3.js"></script>
<script src="~/Scripts/jquery.maskedinput.min.js"></script>
<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Styles/sweetalert.css" rel="stylesheet" />

<div class="container">

    <div class="row texto-formulario col-md-12">
        <h2><b>Cadastre-se</b></h2>
        Informe a região em que está hospedado.
    </div>

    <div class="row formulario col-md-12">

        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="nome">Nome</label>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="col-form form-group col-md-4">
            <label for="telefone">Telefone</label>
            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", @placeholder = "(62) 99999-9999" } })
        </div>

        <div class="col-form form-group col-md-3">
            <label for="tipoVeiculo">Possui Veículo?</label>
            <select class="form-control" id="tipoVeiculo" name="TipoVeiculo">
                <option>Não</option>
                <option>Carro</option>
                <option>Moto</option>
            </select>
        </div>
        <div class="col-form form-group col-md-9">
            <label>Endereço:</label>
            <input type="text" id="endereco" name="Endereco" class="form-control" />
        </div>

        <div class="botao-marcar col-md-2 ">
            <input type="button" class="botao btn btn-marcamapa" id="btnEndereco" name="btnEndereco" value="Marcar no mapa" />
        </div>

        <div class="mapa col-md-12">
            <div id="mapa" class="map-mapa"></div>
            <input type="hidden" id="latitude" name="Latitude" />
            <input type="hidden" id="longitude" name="Longitude" />
        </div>

        <div class="col-form col-md-12">
            <input type="button" class="btn btn-enviar" data-style="expand-right" onclick="location.href='@Url.Action("Create", "Candidato")'" value="Cadastrar" />
        </div>

        }
    </div>

</div>

<script type="text/javascript">
    
</script>
